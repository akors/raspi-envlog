    "version": "0.2.0",
    "configurations": [
        {
            "name": "envlog-monitor",
            "type": "debugpy",
            "request": "launch",
            "program": "./py/envlog-monitor",
            "console": "integratedTerminal",
            "args": [
                "--print",
                "--interval",
                "10",
                "--config",
                "${workspaceFolder}/etc/raspi-envlog.conf"
            ]
        }
    ]
}